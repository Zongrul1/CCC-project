version: "3"
services:
  couch_master:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "5984:5984"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - ./data:/opt/couchdb/data
    environment:
      COUCHDB_USER: "admin"
      COUCHDB_PASSWORD: "admin"
    container_name: couchdb
    


